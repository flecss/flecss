{
  "name": "flecss",
  "version": "0.14.0",
  "author": "Thassilo Martin Schiepanski",
  "description": "flecss is a minimalist and straightforward (S)CSS framework. ",
  "license": "Apache-2.0",
  "homepage": "http://t-ski.github.io/flecss",
  "keywords": [
    "css",
    "scss",
    "framework",
    "flexbox",
    "minimalist"
  ],
  "files": [
    "./dist/",
    "./lib/",
    "./cli.help.txt"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t-ski/flecss.git"
  },
  "bugs": {
    "url": "https://github.com/t-ski/flecss/issues"
  },
  "main": "./lib/api.js",
  "bin": {
    "flecss": "./lib/cli.js"
  },
  "scripts": {
    "prepare": "npx husky",
    "report-meta": "node ./scripts/report-meta.js",
    "build": "node ./scripts/build.js && npm run report-meta",
    "test:unit": "node ./test/unit/unit.test.js",
    "test:end-to-end": "node ./test/end-to-end/app.end-to-end.test.js",
    "test:end-to-end:view": "npm run test:end-to-end ; open ./test/end-to-end/end-to-end.test.html",
    "test:cli": "./flecss.sh ./test/cli/_test.scss ./test/cli/test.css --trace-warnings --print-stacktrace",
    "test:cli:standalone": "npm run test:cli -- -L standalone",
    "test:cli:watch": "npm run test:cli -- --watch",
    "test": "npm run test:unit && npm run test:end-to-end",
    "release:minor": "npm run test && npx rjs-release . --github"
  },
  "dependencies": {
    "clean-css": "^5.3.3",
    "sass": "^1.72.0"
  },
  "devDependencies": {
    "@rapidjs.org/releasing": "^0.x",
    "husky": "^9.0.11",
    "markdown-it": "^14.1.0",
    "puppeteer": "^22.11.0"
  }
}
